<DeviceScreen>:
    Logo:
    FloatLayout:
        name:'device'
        orientation: 'vertical'
        padding: 20

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: '../static/background.jpg'

<DeviceList>:
    padding: 30,120,0,10

[CustomListItem@SelectableView+BoxLayout]:
    size_hint_x: 0.5
    size_hint_y: ctx.size_hint_y
    height: ctx.height
    Image:
        size_hint_x: None
        size: 100, 100
        source: DeviceListItem.get_logo(DeviceListItem.text)

    DeviceListButton:
        id: DeviceListItem
        text: ctx.text
        is_selected: ctx.is_selected
        background_color: self.status_color(ctx.text)
        on_press: self.click()

    BoxLayout:
        size_hint: 0.2, 0.5
        orientation: 'vertical'
        Button:
            disabled_color: 0,0,0,0
            background_color: 0.4, 0.4, 0.4, 0


<SensorGrid>:
    padding: 50, 15, 15, 15
    spacing: 10, 0

<PanelWrite>:
    BoxLayout:
        name: 'write_panel'
        orientation: 'vertical'
        padding: 20

        InputBox:
            id: write_panel
            hint_text: 'Enter a message'
            size_hint: 0.4, 0.05
            pos_hint: {'x': .25, 'y': .60}

        Seperator:
            size_hint: 0.5, 0
            pos_hint: {'x': .25, 'y': .60}

        Button:
            text: 'Add'
            size_hint: 0.25, 0.05
            pos_hint: {'x': .5, 'y': .25}
            on_press: root.write_panel(write_panel.text)
