

<UserScreen>:
    Logo:
        Button:
            background_color: (0, 0, 0, 0)
            size_hint: 0.05, 0.1
            pos_hint: {'x': .82, 'y': .90}
            on_press: root.add_user_popup()
            Image:
                source: '../static/add_user.png'
                y: self.parent.y
                x: self.parent.x
                size: 35, 35
    FloatLayout:
        name:'user'
        orientation: 'vertical'
        padding: 20

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: '../static/background.jpg'


<AddUserPanel>:
    name: 'add_user'
    orientation: 'vertical'
    padding: 20

    InputBox:
        id: user_name
        hint_text: 'Enter user name'
        size_hint: 0.4, 0.22
        pos_hint: {'x': .25, 'y': .60}
    Seperator:
        size_hint: 0.5, 0
        pos_hint: {'x': .25, 'y': .60}

    Button:
        text: 'Add'
        size_hint: 0.25, 0.20
        pos_hint: {'x': .5, 'y': .25}
        on_press: root.add_user(user_name.text)


<UserList>:
    padding: 30,120,0,10

[CustomUserItem@SelectableView+BoxLayout]:
    size_hint_x: 0.5
    size_hint_y: ctx.size_hint_y
    height: ctx.height
    Image:
        size_hint_x: None
        size: 100, 100
        source: '../static/user_logo.png'

    UserListButton:
        id: UserListItem
        text: ctx.text
        on_press: self.click()

    BoxLayout:
        size_hint: 0.2, 0.5
        orientation: 'vertical'
        Button:
            disabled_color: 0,0,0,0
            background_color: 0.4, 0.4, 0.4, 0
