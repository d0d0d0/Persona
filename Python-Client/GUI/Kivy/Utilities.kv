<InputBox>:
    write_tab: False
    use_bubble: True
    size_hint: 0.3, .05
    background_color: 1,1,1,0
    hint_text_color: 0.4,0.4,0.4,1
    foreground_color: 1,1,1,1
    cursor_blink: True
    multiline: False

<Seperator>:
    size_hint: 0.3, 0
    height: 0.5
    canvas:
        Color:
            rgb: 1,1,1,1
        Rectangle:
            pos: self.x, self.center_y - 5
            size: self.width, self.height

<Logo>:
    canvas.after:
        Color:
            rgba: 1, 1, 1, 0.7
    canvas.before:
        Rectangle:
            pos: 0, self.height - self.height/7
            size: self.width, self.height/7

    Label:
        text: '[b]' + root.parent.get_tag() + '[/b]'
        pos_hint: {'center_x': .50, 'center_y': 1.02}
        markup: True
        text_size: cm(12), cm(4)
        font_size: 22
        color: 0, 0, 0

    Button:
        background_color: (0, 0, 0, 0)
        size_hint: 0.2, 0.1
        pos_hint: {'x': .05, 'y': .90}
        on_press: root.parent.logout()
        Image:
            source: '../static/logout.png'
            y: self.parent.y - 10
            x: self.parent.x
            size: 45, 45

    Button:
        background_color: (0, 0, 0, 0)
        size_hint: 0.2, 0.1
        pos_hint: {'x': .13, 'y': .90}
        on_press: root.parent.update_ip()
        Image:
            source: '../static/connect.png'
            y: self.parent.y - 5
            x: self.parent.x
            size: 35, 35

    Button:
        background_color: (0, 0, 0, 0)
        size_hint: 0.2, 0.1
        pos_hint: {'x': .9, 'y': .90}
        on_press: root.parent.back()
        Image:
            source: '../static/back.png'
            y: self.parent.y - 15
            x: self.parent.x
            size: 65, 65


<SubtleLabel>:
    markup: True
    text_size: cm(6), cm(4)
    font_size: 12
    color: 0.9, 0.9, 0.9

<ErrorLabel>:
    markup: True
    text_size: 600, None
    font_size: 14